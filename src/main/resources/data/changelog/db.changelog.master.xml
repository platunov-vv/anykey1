<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd
      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.2.xsd">
    <property name="uuid_type" value="uuid" dbms="h2"/>
    <property name="uuid_function" value="RANDOM_UUID()" dbms="h2"/>
    <changeSet author="platunov.vv" id="2013-03-02-initial-schema-import-1">
        <createTable tableName="tb_user">
            <column  name="id"  type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="firstname" type="VARCHAR(255)"/>
            <column name="lastname" type="VARCHAR(255)"/>

        </createTable>
    </changeSet>
    <changeSet id="2013-03-02-initial-schema-import-2" author="platunov.vv">
        <addPrimaryKey tableName="tb_user" columnNames="id" />
    </changeSet>
</databaseChangeLog>
